$color(n)
    rgba(50,110,160,n)

$color2(n)
    rgba(100,160,210,n)

.homepage {

    &__splash {
        padding: 1rem 0;
        background: linear-gradient($color2(0.5), $color2(0.8));
        text-align: center;
        height: 350px;
    }

    &__title {
        font-size: 2.3rem;
        line-height: 1.3;
        color: #fff;
        text-shadow: 0px 1px 2px rgba(25,45,60,0.7);
        margin: 1rem 0;
    }

    &__subtitle {
        color: rgba(40,40,100,0.9);
        text-shadow: 0px 1px 1px #fff;
        font-size: 1.3rem;
        font-weight: normal;

        &_type_bold {
            font-weight: bold;
        }
    }

    &__features {
        background-color: #f9f9f9;
        padding: 2rem 0 5rem;
        clearfix();
    }

    &__feature {
        padding: 30px;
        width: 255px;
        margin: 0 3px 3px 0;
        background-color: #fff;
        border-bottom: 3px solid #d9d9d9;
        border-right: 2px solid #d9d9d9;
        float: left;
        line-height: 1.3;
        height: 470px;

        &-text {
            color: #888;
            font-size: 0.78rem;
            line-height: 1.4;
        }

        &-title {
            color: #000;
            font-size: 1.3rem;
            margin: 0.5rem 0;
        }

        &-img {
            display: block;
            margin: 0 auto;
        }
    }

    &__instruction {
        margin: 2rem 0 3rem;

        &-title {
            font-size: 1.6rem;
            margin-bottom: 1.3rem;
            color: rgba(40,40,100,1);
        }

        &-list {
            counter-reset: item;

            &-item {
                counter-increment: item;
                margin: 1rem 0;
                color: #333;

                &:before {
                    content: counter(item) ".";
                    display: inline-block;
                    margin-right: 0.5rem;
                    font-weight: bold;
                    color: #000;
                }
            }
        }
    }
}
