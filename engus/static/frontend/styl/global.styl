@import 'nib';

global-reset()

@import 'hacks.styl';

// blocks:
@import 'link.styl';
@import 'content.styl';
@import 'dictionary.styl';
@import 'definition.styl';
@import 'cards.styl';
@import 'topmenu.styl';
@import 'learning.styl';

.html {
    font-size: 20px;

    @media (max-width: 400px) {
        font-size: 17px;
    }
}

.page {
    font-size: 1rem;
    font-family: Helvetica, serif;
    font-family: Georgia, serif;
    font-family: "Palatino Linotype", "Book Antiqua", Palatino, serif;
    line-height: 1.4;
    max-width: 650px;
    margin: 0 auto;
    padding: 0 1.2rem;

    @media (max-width: 400px) {
        padding: 0;
    }
}

* {
    -webkit-tap-highlight-color: transparent;
}
