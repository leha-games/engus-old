$color(n)
    rgba(50,110,160,n)

$color2(n)
    rgba(100,160,210,n)

.homepage {

    &__regbutton {
        color: #fff;
        background-color: rgba(0,0,0,0.6);
        display: inline-block;
        text-decoration: none;
        padding: 0.5rem 1.5rem;
        margin-right: 1rem;
        margin-bottom: 1rem;
        color: rgba(255,255,255,1);
        border: 1px solid rgba(255,255,255,0.8);
        transition: all 0.15s;

        &:hover {
            color: rgba(255,255,255,1);
            background-color: rgba(0,0,0,0.4);
            border-color: rgba(255,255,255,1);
        }
    }


    &__title {
        font-size: 2rem;
        letter-spacing: 0.1rem;
        line-height: 1.2;
        font-weight: bold;
        margin-bottom: 0.8rem;
    }

    &__clarification {
        font-size: 0.9rem;
        line-height: 1.6;
        color: rgba(255,255,255,0.8);
    }

    &__subtitle {
        color: rgba(40,40,100,0.9);
        text-shadow: 0px 1px 1px #fff;
        font-size: 1.3rem;
        font-weight: normal;

        &_type_bold {
            font-weight: bold;
        }
    }

    &__features {
        background-color: #f9f9f9;
        padding: 2rem 0 5rem;
        text-align: center;
    }

    &__feature {
        display: inline-block;
        width: 255px;
        padding: 30px;
        margin: 0 3px 3px 0;
        background-color: #fff;
        border-bottom: 3px solid #d9d9d9;
        border-right: 2px solid #d9d9d9;
        line-height: 1.3;
        vertical-align: top;
        text-align: left;

        @media(max-width: 450px) {
            width: auto;
        }

        &-text {
            color: #888;
            font-size: 0.9rem;
            line-height: 1.4;
            height: 13rem;

            @media(max-width: 450px) {
                height: auto;
            }
        }

        &-title {
            color: #000;
            font-size: 1.6rem;
            margin: 0.5rem 0;
        }

        &-img {
            display: block;
            margin: 0 auto 1.5rem;
        }
    }

    &__howto {
        padding: 2rem 0 5rem;

        &-title {
            font-size: 2rem;
            margin-bottom: 1.5rem;

            &-bold {
                font-weight: bold;
            }
        }

        &-list {
            counter-reset: item;

            &-item {
                counter-increment: item;
                margin: 1rem 0;
                color: #555;

                &:before {
                    content: counter(item) ".";
                    display: inline-block;
                    margin-right: 0.5rem;
                    font-weight: bold;
                    color: #000;
                    font-size: 1.2rem;
                }
            }
        }

        &-screen {
            display: block;
            margin: 0.5rem 0 1.5rem;
            max-width: 100%;
        }
    }

    &__registration-big-button {
        font-size: 1.5rem;
        text-align: center;
        margin: 5rem auto 3rem;
        display: block;
        padding: 0.6rem 0;
        max-width: 500px;
        border: 1px solid rgba(0,0,255,0.3);
        text-decoration: none;
        color: rgba(0,0,255,1);
        transition: all 0.3s;
        font-weight: bold;

        &:hover {
            border-color: rgba(0,0,255,1);
        }
    }
}
