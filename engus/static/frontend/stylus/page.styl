$color(n)
    rgba(50,110,160,n)

.page {
    line-height: 1.4;
    
    &__container {
        max-width: 960px;
        margin: 0 auto;
        padding: 1rem;
    }

    &__header {
        background: linear-gradient($color(0.6), $color(1));
        border-bottom: 1px solid #fff;

        &-container {
            display: flex;
            align-items: center;

            @media (max-width: 600px) {
                flex-direction: column;
                align-items: stretch;
            }
        }

        &-title {
            font-size: 1.5rem;
            
            &-link {
                color: #fff;
                text-shadow: 0 1px 1px #333;
                text-decoration: none;
                color: #fff;
            }
        }

        &-login {
            flex-grow: 1;
            text-align: right;

            @media (max-width: 600px) {
                text-align: left;
            }
        }
    }

    &__btn {
        font-size: 0.9rem;
        color: rgba(21,23,55,1);
        border: 1px solid rgba(40,40,100,1);
        border-radius: 0.25rem;
        padding: 0.5rem 1rem;
        outline: none;
        box-shadow: inset 0px 1px 1px 1px #fff;
        background: linear-gradient(#ffffff, #c1c1c1);
        cursor: pointer;
        text-shadow: 0px 1px 1px #fff;
        margin-right: 0.2rem;
        font-weight: bold;
        text-decoration: none;

        &_color {

            &_yellow {
                background: linear-gradient(#ffe883, #ffb505);
            }
        }
    }

    &__form {
        max-width: 400px;
        flex-grow: 1;
        padding: 1rem 2rem;
        margin: 2rem auto;
        color: #fff;
        background-color: rgba(0,0,0,0.8);

        &-title {
            font-size: 1.5rem;
            margin-bottom: 1rem;
        }

        p {
            margin: 0.3rem 0 1rem;

            &.centered {
                text-align: center;
            }
        }

        a {
            color: #fff !important;

            &:hover {
                border-bottom: 1px solid #fff;
            }
        }

        .errorlist {
            border-left: 3px solid red;
            padding-left: 0.7rem;
            font-size: 0.85rem;
        }

        label {
            font-size: 0.8rem;
            margin-bottom: 0.35rem;
            display: block;
        }

        input {
            display: block;
            box-sizing: border-box;
            width: 100%;
            border: none;
            padding: 0.35rem 0.5rem;
            color: #000;
        }

        input[type="submit"] {
            margin: 1.7rem 0;
            padding: 0.5rem 0;
            font-size: 1.1rem;
            text-align: center;
            color: #fff;
            border: none;
            outline: none;
            background: rgba(0,0,0,0.7);
            cursor: pointer;
            text-decoration: none;
        }
    }
}
