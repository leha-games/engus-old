$color(n)
    rgba(50,110,160,n)

.topmenu {
    font-family: Helvetica, sans-serif;
    width: 100%;
    overflow: hidden;
    border-bottom: 1px solid $color(1);
    border-bottom: 1px solid #ccc;

    &__items {
        max-width: 650px;
        margin: 0 auto;
        display: flex;
    }

    &__item {
        flex-grow: 1;
        flex-basis: 1%;
        text-align: center;
        color: $color(1);
        color: #aaa;
        font-size: 1.1rem;

        &:hover {
            //background: $color(0.05);
            color: $color(1);
        }

        &.active {
            //background: linear-gradient($color(0.6), $color(1));
            color: #fff;
            color: $color(1);
            //text-shadow: 0 1px 1px rgba(0,0,0,0.7);
        }
    }

    &__item-text {
        display: block;
        font-size: 0.8rem;
    }

    &__item-link {
        display: block;
        padding: 0.5rem 0;
        color: inherit;
        text-decoration: none;
        cursor: pointer;
    }

    &__item-icon {
        margin-right: 0.2rem;
        display: block;
        margin: 0.2rem 0 0.35rem;
        font-size: 1.3rem;
    }
}
