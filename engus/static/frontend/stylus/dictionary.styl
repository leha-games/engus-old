.dictionary {

    &__word {
        margin: 1rem 0;
    }

    &__word-loading-icon {
        color: #326ea0;
        font-size: 1.5rem;
    }

    &__word-not-found {
        font-style: italic;
        color: #777;
        font-size: 1.2rem;
        margin-top: 1rem;
    }

    &__headword {
        font-size: 2.6rem;
        display: inline-block;
        margin-right: 0.8rem;
    }

    &__word-star {
        display: inline-block;
        font-size: 1.5rem;
        color: rgba(0,0,255,0.35);
        cursor: pointer;

        &:hover {
            color: rgba(0,0,255,1);
        }

        &.new {
            color: limegreen;
        }

        &.learned {
            color: orange;
        }

        &.known {
            color: deepskyblue;
        }
    }

    &__headword-transcription {
        font-size: 1.3rem;
        display: inline-block;
        color: #555;
        margin: 0.2rem 0;

        &.with-audio {
            cursor: pointer;
        }
    }

    &__headword-transcription-audio {
        font-size: 1rem;
        margin-left: 0.5rem;

        &.hover {
            color: blue;
        }
    }

    &__definitions {
        margin: 1rem 0 5rem;
    }
    
    &__search-form {
        position: relative;
    }

    &__search-input {
        display: block;
        box-sizing: border-box;
        height: 2.4rem;
        width: 100%;
        line-height: 2rem;
        padding: 0.2rem 2.3rem 0.2rem 0.5rem;
        margin: 0;
        outline: none;
        box-shadow: none;
        border: 1px solid #aaa;
        border-radius: 0;
        -webkit-appearance: none;
    }

    &__search-input-spinner {
        position: absolute;
        right: 1rem;
        top: 0.7rem;
        color: rgba(0,0,255,0.4);
    }

    &__search-dropdown {
        position: absolute;
        width: 100%;
        max-height: 20rem;
        overflow: scroll;
        box-sizing: border-box;
        top: 2.4rem;
        background-color: #fff;
        border: 1px solid #aaa;
        border-top: none;
        box-shadow: 0 1px 6px rgba(0,0,0,0.2);
    }

    &__search-dropdown-item {

        &_state {
            
            &_notfound {
                padding: 0.3rem 0.5rem;
                color: #999;
                font-style: italic;
            }
        }
    }

    &__search-dropdown-item-link {
        display: block;
        padding: 0.3rem 0.5rem;
        color: #000;
        text-decoration: none;
        cursor: pointer;
        background-color: #fff;
        border: none;

        &:hover, &:focus {
            background-color: yellow;
        }
    }

    &__word-list {
        margin: 1rem 0;

        &-item {

            &-link {
                display: block;
                padding: 0.5rem 0;
            }
        }
    }

    &__mueller {
        margin: 1rem 0 1.5rem;

        &-level2 {
            display: block;
            margin: 0.5rem 0 0.2rem;
        }

        &-level3 {
            display: block;
            margin: 0.2rem 0;
            margin-left: 0.5rem;
        }

        &-numbers1 {
            color: rgba(80,0,0,1);
            font-weight: bold;
        }

        &-numbers2 {
            color: rgba(0,120,0,1);
            font-weight: bold;
        }

        &-numbers3 {
            color: rgba(0,0,150,1);
        }
    }

    &__short-def {
        font-size: 1.3rem;
        text-align: center;
        color: #222;
        padding-top: 0.5rem;
    }
}

