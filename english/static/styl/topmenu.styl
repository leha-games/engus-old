$color(n)
    rgba(50,110,160,n)

.topmenu {
    display: flex;
    border-bottom: 5px solid $color(1);

    &__item {
        flex-grow: 1;
        flex-basis: 1%;
        font-size: 1.1rem;
        text-align: center;
        color: $color(1);

        &:hover {
            background: $color(0.05);
        }

        &.active {
            background: linear-gradient($color(0.6), $color(1));
            color: #fff;
            text-shadow: 0 1px 1px rgba(0,0,0,0.7);
        }
    }

    &__item-link {
        display: block;
        padding: 0.5rem 0;
        color: inherit;
        text-decoration: none;
    }

    &__item-icon {
        margin-right: 0.2rem;
    }
}
